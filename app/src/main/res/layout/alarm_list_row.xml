<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:id="@+id/alarm_list_row_imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/alarm_list_row_date" />
    <TextView
        android:id="@+id/alarm_list_row_time_of_event"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_width="100dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp" />
    <TextView
        android:id="@+id/alarm_list_row_date"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@+id/alarm_list_row_time_of_event"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp" />
    <TextView
        android:id="@+id/alarm_list_row_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignBottom="@+id/alarm_list_row_time_of_event"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/alarm_list_row_time_of_event" />

    <TextView
        android:id="@+id/alarm_list_row_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@+id/alarm_list_row_name"
        android:layout_toEndOf="@+id/alarm_list_row_date"
        android:layout_alignParentEnd="true" />




</RelativeLayout>